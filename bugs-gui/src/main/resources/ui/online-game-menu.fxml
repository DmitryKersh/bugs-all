                </AnchorPane>
            </top>
            <center>
                <ScrollPane fx:id="gameScrollPane" fitToHeight="true" fitToWidth="true" pannable="true" prefHeight="755.0" prefWidth="256.0" style="-fx-background-color: #666666;" BorderPane.alignment="CENTER">
                    <content>
                        <BorderPane fx:id="innerBorderPane" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #666666;">
