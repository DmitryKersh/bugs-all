                                            <ComboBox fx:id="playerConfigComboBox" layoutX="14.0" layoutY="156.0" onAction="#playerConfigComboBox_onChanged" prefHeight="25.0" prefWidth="171.0" promptText="Select Game Mode" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="50.0" />
