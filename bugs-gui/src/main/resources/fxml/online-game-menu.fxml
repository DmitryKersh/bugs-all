<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.*?>
<Scene stylesheets="/css/fx-styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.dmitrykersh.bugs.gui.javafxcontroller.OnlineGameMenuController">
    <root>
        <BorderPane fx:id="mainBorderPane" maxHeight="1080.0" maxWidth="1920.0" minHeight="720.0" minWidth="800.0" prefHeight="720.0" style="-fx-background-color: #666666;">
            <top>
                <BorderPane styleClass="border-pane-header">
                    <left>
                        <Button styleClass="button-cancel, margin-10" onAction="#backButton_onClick" text="Back" />
                    </left>
                    <center>
                        <Label styleClass="label-h2" text="Online game"/>
                    </center>
                </BorderPane>
            </top>
            <center>
                <ScrollPane fx:id="gameScrollPane" styleClass="scroll-pane" BorderPane.alignment="CENTER">
                    <content>
                        <BorderPane fx:id="innerBorderPane" styleClass="border-pane">
                            <top>
                                <VBox styleClass="border-pane-header" maxHeight="200.0">
                                    <HBox alignment="BASELINE_CENTER">
                                        <Label fx:id="playerListLabel" styleClass="label-h3"/>
                                    </HBox>
                                    <HBox alignment="BASELINE_CENTER">
                                        <Label fx:id="activePlayerLabel" styleClass="label-h3"/>
                                    </HBox>
                                </VBox>
                            </top>
                        </BorderPane>
                    </content>
                </ScrollPane>
            </center>
            <left>
                <VBox styleClass="side-pane" BorderPane.alignment="CENTER">
                    <children>
                        <TextField fx:id="serverField" promptText="Server" text="ws://localhost:8889/websocket"/>
                        <TextField fx:id="usernameField" promptText="Account Name"/>
                        <TextField fx:id="nicknameField" promptText="Nickname"/>
                        <PasswordField fx:id="passwordField" promptText="Password"/>
                        <HBox alignment="BASELINE_CENTER" minHeight="60.0">
                            <Button fx:id="connectButton" styleClass="button" onMouseClicked="#connectButton_onClick" text="Connect" alignment="TOP_CENTER"/>

                        </HBox>

                        <Label fx:id="errorLabel" styleClass="label-error" wrapText="true"/>
                        <Label fx:id="infoLabel" styleClass="label-info" wrapText="true" />

                        <TabPane fx:id="tabPane" styleClass="tab-pane" tabClosingPolicy="UNAVAILABLE" visible="false">
                            <tabs>
                                <Tab text="Connect to Game">
                                    <content>
                                        <VBox styleClass="vbox-tab">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0" >
                                                    <TextField fx:id="boardIdTextField" minWidth="200" promptText="Enter Game ID"/>
                                                    <Button fx:id="searchGameButton" styleClass="button" onMouseClicked="#searchGameButton_onClick" text="Search"/>
                                                </HBox>
                                                <Label fx:id="boardIdLabel" styleClass="label-header"/>
                                                <ColorPicker fx:id="colorPicker" maxHeight="45.0" maxWidth="45.0" promptText="Select color"/>
                                                <GridPane fx:id="playersGridPane">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="203.0" minWidth="10.0" prefWidth="203.0" />
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="181.0" minWidth="10.0" prefWidth="116.0" />
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                    </rowConstraints>
                                                </GridPane>
                                                <Button fx:id="startGameButton" styleClass="button" onAction="#startGameButton_onClick" text="Start Game!" visible="false"/>
                                            </children>
                                        </VBox>
                                    </content>
                                </Tab>
                                <Tab text="Create New Game">
                                    <content>
                                        <VBox styleClass="vbox-tab">
                                            <ComboBox fx:id="layoutComboBox" onAction="#layoutComboBox_onChanged" promptText="Select Layout"/>
                                            <ComboBox fx:id="gameModeComboBox" onAction="#playerConfigComboBox_onChanged" promptText="Select Game Mode"/>
                                            <Label styleClass="label-default" text="Layout settings"/>
                                            <GridPane fx:id="paramGridPane" styleClass="grid-pane">
                                                <columnConstraints>
                                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                </columnConstraints>
                                                <rowConstraints>
                                                    <RowConstraints minHeight="1.0" vgrow="SOMETIMES" />
                                                    <RowConstraints minHeight="1.0" vgrow="SOMETIMES" />
                                                    <RowConstraints minHeight="1.0" vgrow="SOMETIMES" />
                                                </rowConstraints>
                                            </GridPane>
                                            <HBox alignment="BASELINE_CENTER">
                                                <Button fx:id="createGameButton" onAction="#createGameButton_onClick" text="Create Game"/>
                                            </HBox>
                                        </VBox>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </VBox>
            </left>
        </BorderPane>
    </root>
</Scene>
